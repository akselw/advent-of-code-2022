findMarkerPosition : String -> Maybe Int
findMarkerPosition string =
    let
        helper : Int -> List Char -> Maybe Int
        helper index chars =
            let
                numberOfUniqueChars =
                    chars
                        |> List.take 4
                        |> Set.fromList
                        |> Set.size
            in
            if numberOfUniqueChars == 4 then
                Just index

            else
                chars
                    |> List.tail
                    |> Maybe.andThen (helper (index + 1))
    in
    string
        |> String.toList
        |> helper 4


